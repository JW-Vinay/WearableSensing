<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray" >

    <Button
        android:id="@+id/stressMeasureBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/tag_measure"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stressMeasureBtn"
        android:layout_alignStart="@+id/stressMeasureBtn"
        android:layout_below="@+id/stressMeasureBtn"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="start|center_vertical"
        android:text="@string/tag_status"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/statusTextView"
        android:layout_alignLeft="@+id/statusTextView"
        android:layout_alignRight="@+id/statusTextView"
        android:layout_alignStart="@+id/statusTextView"
        android:layout_below="@+id/statusTextView"
        android:layout_marginEnd="10dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="start|center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

</RelativeLayout>